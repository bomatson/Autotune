<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title))%></title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim'%>	
  
  <script src="http://platform.twitter.com/anywhere.js?id=W1fX4UykZTmrZ6jOhUnkYQ&v=1" type="text/javascript"></script>
  
</head>
	<body>
	<%= render 'layouts/header'%>
		<div class="container">	
			<% flash.each do |key, value|%>
				<%= content_tag(:div, value, class: "alert alert-#{key}")%>
			<% end %>
			<%= yield %>
			
			<div id="iWantTo"> 
				
				<div id="getStarted">
					<h2>What do you want to do?</h2>
					<p>You may be prompted to sign in via <span class="twitter_icon"></span></p>
				</div>
			
				<div class="row">
					<div id="WakeUp" class="action span4">
						<span class="hash">#WakeUp</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
					<div id="DoWork" class="action span4">
						<span class="hash">#DoWork</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
					<div id="GetBig" class="action span4">
						<span class="hash">#GetBig</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
				</div><!--.row-->
				
				<div class="row">
					<div id="GetDrunk" class="action span4">
						<span class="hash">#GetDrunk</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
					<div id="HookUp" class="action span4">
						<span class="hash">#HookUp</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
					<div id="PassOut" class="action span4">
						<span class="hash">#PassOut</span>
						<span class="icon"></span>
						<span class="highlight"></span>
					</div>
				</div><!--.row-->
					
			</div> <!-- #iWantTo -->
			
			<div id="tweetThis">
				
				<div id="createPlaylist" class="span12">
					<h2>Get tracks from your friends</h2>
					<p>Submit your tweet to get your playlist</p>
				</div>
			
			
				<div class="row">
					<div id="tweetThisForm" class="span8 offset2">
						<form id="tweetThisFormForm">
							<textarea></textarea>
							<input class="submit" type="submit" value="Tweet it!" />
						</form>
						
					</div><!--#tweetThisForm-->
				</div><!--.row-->
				
			</div><!--#tweetThis-->
			
			<div id="musicPlayer">
				<div id="listenToPlaylist" class="span12">
					<h2>This is your #AutoTuneApp Playlist</h2>
					<p>Your friends' suggestions will be added in realtime</p>
				</div>
				
				<div id="playerBackground">
					<div id="next"></div>
					<p>This is where the player goes</p>
				</div>
			</div><!--#musicPlayer-->
			
			<%=debug(params) if Rails.env.development?%>
			
		</div><!--.container-->
		
		<div id="tbox"></div>
<script type="text/javascript">
 
  twttr.anywhere(function (T) {
 
    T("#tbox").tweetBox({
      height: 100,
      width: 400,
      defaultContent: "<YOUR DEFAULT TWEETBOX CONTENT HERE>"
    });
 
  });
 
</script>

		<div id="test">
			<div class="button" id="button_1"></div>
			<div class="button" id="button_2"></div>
			<div class="button" id="button_3"></div>
		</div>
	</body>
</html>
